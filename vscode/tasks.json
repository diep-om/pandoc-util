{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "panpdf",
            "type": "shell",
            "command": "~/app/bin/pand pdf '${file}'",
            "options": {
                "cwd": "${fileDirname}",
            },
            "group": {
                "kind": "build",
                "isDefault": false,
            },
        },
        {
            "label": "panpdf with OPTIONS",
            "type": "shell",
            "command": "~/app/bin/pand pdf '${file}' ${input:pandocOptions}",
            "options": {
                "cwd": "${fileDirname}",
            },
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "pandocOptions",
            "description": "e.g., -V geometry:margin=2in",
        },
    ],
}